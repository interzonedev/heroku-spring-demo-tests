<?xml version="1.0" encoding="UTF-8"?>

<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger - %msg%n</pattern>
		</encoder>
	</appender>

	<logger name="org.springframework" level="INFO" />
	<logger name="org.springframework.context" level="WARN" />
	<logger name="org.springframework.beans.factory.annotation" level="WARN" />
	<logger name="org.hibernate" level="INFO" />
	<logger name="org.dbunit" level="INFO" />

	<logger name="com.interzonedev.zankou" level="DEBUG" />

	<logger name="com.interzonedev.herokuspringdemo" level="DEBUG" />

	<root level="DEBUG">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>
